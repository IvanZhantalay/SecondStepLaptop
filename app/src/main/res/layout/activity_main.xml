<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#76C009"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Andr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="51dp"
        android:textSize="15dp"
        android:text="Android"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/FlagTop"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FlagTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#0058B5"

        app:layout_constraintLeft_toRightOf="@+id/Andr"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FlagBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#F7CE00"

        app:layout_constraintLeft_toRightOf="@+id/Andr"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FlagTop" />

    <TextView
        android:id="@+id/Login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:text="Login"
        app:layout_constraintBottom_toTopOf="@+id/input_Name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Andr"
        app:layout_constraintVertical_bias="0.443" />

    <TextView
        android:id="@+id/input_Name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="15dp"
        android:background="#C8C8C8"
        android:textSize="18dp"
        android:hint="Enter name"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/Andr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/input_Password"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="40dp"
        android:padding="15dp"
        android:background="#C8C8C8"
        android:textSize="18dp"
        android:hint="Enter Password 123"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/input_Name"
        app:layout_constraintLeft_toLeftOf="parent"
         />

    <Button
        android:id="@+id/button1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8C8D8"
        android:textSize="18dp"
        android:onClick="onClick"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>